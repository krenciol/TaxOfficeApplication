<Window
    x:Class="TaxOfficeApplication.Views.ShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="https://github.com/fantasticfiasco/mvvm-dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://www.codeplex.com/prism"
    Title="{Binding Title, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
    Width="800"
    Height="450"
    dialogs:DialogServiceViews.IsRegistered="True"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Button
                Grid.Row="0"
                MinWidth="80"
                Margin="5"
                Command="{Binding ShowContractorCommand}"
                Content="Aktówka"
                Style="{StaticResource OrangeButton}" />

            <Button
                Grid.Row="1"
                MinWidth="80"
                Margin="5"
                Content="Umowy"
                Style="{StaticResource OrangeButton}" />

            <Button
                Grid.Row="2"
                MinWidth="80"
                Margin="5"
                Content="Rozliczenia"
                Style="{StaticResource OrangeButton}" />
            <Button
                Grid.Row="3"
                MinWidth="80"
                Margin="5"
                Content="Profil podatnika"
                Style="{StaticResource OrangeButton}" />

            <Button
                Grid.Row="3"
                MinWidth="80"
                Margin="5"
                Content="Zadania"
                Style="{StaticResource OrangeButton}" />

            <Button
                Grid.Row="4"
                MinWidth="80"
                Margin="5"
                Content="Wyniki"
                Style="{StaticResource OrangeButton}" />
        </Grid>
        <ContentControl
            Grid.Row="1"
            Grid.Column="1"
            prism:RegionManager.RegionName="ContentRegion" />
        <StatusBar
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <StatusBarItem HorizontalAlignment="Left">
                <Label Padding="0" Content="{Binding Message, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <Label
                    Padding="0"
                    Content="{Binding MemoryStatus, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    ContentStringFormat="{}{0} MB" />
            </StatusBarItem>
        </StatusBar>
    </Grid>

</Window>
